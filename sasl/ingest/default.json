{
  "description": "Pipeline for parsing Zimbra mailbox logs. Requires the geoip and user_agent plugins.",
  "processors": [{
    "grok": {
      "field": "message",
        "pattern_definitions": {
            "SASLSTATUS": "(?:failed|OK)",
            "SASLEMAIL": "(?:[%{EMAILADDRESS:email}])",
            "SASL_COM": "saslauthd(?:[%{POSINT:pid}])?: %{DATA:provider}:"
        },
      "patterns":[
        "%{TIMESTAMP_ISO8601:timestamp} %{SYSLOGHOST:hostname} %{SASL_COM}",
        "%{EMAILADDRESS:username} auth %{SASLSTATUS:result}(: authentication failed for %{SASLEMAIL})?"
        ],
      "ignore_missing": true
    }
  },{
    "remove":{
      "field": "message"
    }
  }, {
  }],
  "on_failure" : [{
    "set" : {
      "field" : "error",
      "value" : "{{ _ingest.on_failure_message }}"
    }
  }]
}
